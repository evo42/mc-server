# Global Configuration

# .secrets file is used to store sensitive information
# Uncomment and set the following variables in .secrets file
# Minecraft Server Admin Credentials
# ADMIN_USER=admin
# ADMIN_PASS=admin123
# watchtower
# REPO_USER=your-github-username
# REPO_PASS=your-personal-access-token

# Development admin credentials and JWT secret for admin-api
# NOTE: change these for production deployments.
ADMIN_PASS=admin123
JWT_SECRET=dev-jwt-secret-change-me

# ================================
# MONITORING CONFIGURATION
# ================================

# Domain für Monitoring Services
DOMAIN=mc-server.local

# Grafana Configuration
GRAFANA_PASSWORD=admin123

# Redis Configuration
REDIS_PASSWORD=your-redis-password
REDIS_MAXMEMORY=2gb

# Email Alerting (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_USERNAME=alerts@yourdomain.com
SMTP_PASSWORD=your-app-password

# Slack Integration (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# PagerDuty Integration (optional)
PAGERDUTY_SERVICE_KEY=your-service-key

TZ=UTC


# Minecraft Server Defaults
MC_MOTD="Welcome to LernCraft :)"
MC_VERSION=1.21.10
MC_EULA=TRUE
# Best-practice resource allocation for 24GB per instance
MC_MEMORY=5G
MC_MAX_MEMORY=10G
MC_MAX_PLAYERS=42

# Best-practice performance settings
VIEW_DISTANCE=10
SIMULATION_DISTANCE=8

# PaperMC Optimizations for performance and anti-cheat
PAPER_SETTINGS_WORLD_SETTINGS_DEFAULT_OPTIMIZE_ENTITY_TICKING=true
PAPER_SETTINGS_WORLD_SETTINGS_DEFAULT_MERGE_RADIUS_ITEM=3.5
PAPER_SETTINGS_WORLD_SETTINGS_DEFAULT_MERGE_RADIUS_EXP=4.0
PAPER_SETTINGS_WORLD_SETTINGS_DEFAULT_TICKS_PER_MOB_SPAWNS=4
PAPER_SETTINGS_WORLD_SETTINGS_DEFAULT_ANTIXRAY_ENABLED=true
PAPER_SETTINGS_WORLD_SETTINGS_DEFAULT_ANTIXRAY_ENGINE_MODE=2
MC_ONLINE_MODE=false
MC_ENABLE_PROXY_CONNECTIONS=true

# Server-specific configurations
MC_ILIAS_NAME="Ikaria Games"
MC_NIILO_NAME="Königreich der letzten Krieger"
